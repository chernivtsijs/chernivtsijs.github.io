span.our-next
  font-size: 0.8em
  & a
    color: #fff
  & span
    padding: 0 0 0 3px
    white-space: nowrap
.row-thanks
  margin-bottom: 7%
  & .partners
    font-size: 16px
    font-size: 1.7vw


.action-btn__disable
  pointer-events: none
  opacity: 0.5
  background: RGBA(0,0,0,0.3)

section.bottom-banner .action-btn__disable
  display: none

.speakersMin-action
  padding: 0 0 4%
